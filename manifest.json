{
  "manifest_version": 2,
  "name": "GitHub Settings",
  "version": "1.0",
  "description": "GitHub Settings",
  "icons" : {
    "16": "images/Git-Icon-Black16.png",
    "48": "images/Git-Icon-Black48.png",
    "128": "images/Git-Icon-Black128.png"
  },
  "page_action": {
    "default_title": "GitHub Settings",
    "default_icon": {
      "16": "images/Git-Icon-Black16.png",
      "24": "images/Git-Icon-Black24.png",
      "32": "images/Git-Icon-Black32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["URI.js", "background.js"]
  },
  "permissions": ["https://github.com/",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "declarativeContent",
    "tabs"
  ]
}
